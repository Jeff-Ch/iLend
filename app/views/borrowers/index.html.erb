<div class='row'>
	<div class='col s3 push-s1'>
		<% if @total_raised >= @request.money %>
		<a href="/lenders/reset" class="btn waves-effect green accent-4 waves-light">Claim Your Funding</a>
		<% else %>
		<a class="btn waves-effect grey waves-light">Claim Your Funding</a>
		<% end %>
	</div>
	<div class='col s3 push-s1'>
		<% if @total_raised >= @request.money %>
		<a href="/lenders/reset" class="btn waves-effect green accent-4 waves-light">Claim Your Funding</a>
		<% else %>
		<a class="btn waves-effect grey waves-light"></a>
		<% end %>
	</div>
	<div class='col s2 right'>
		<a href="/sessions/logout" class="btn waves-effect blue accent-2 waves-light">Log Out</a>
	</div>
</div>
<div class='row'>
	<div class = 'col s3 push-s5'>
		<span style="font-weight: bold">Progress Bar:</span> <div id = "overall_bar">
		<div id ='progress' style='width: <%= @progress %>px'>
		</div>
		</div>
	</div>
</div>

<h5 class="center"><span style="font-weight: bold">Status:</span> $<%= @total_raised %> / $<%=  @request.money %></h5>
<h5 class="center"><span style="font-weight: bold">Purpose:</span> <%= @request.purpose %></h5>
<h5 class="center"><span style="font-weight: bold">Description:</span> <%= @request.description %></h5>

<h5 style="font-weight: bold" class='center style1'>Lenders</h5>
<div class = "row">
	<div class = "col s8 push-s2">
		<table>
			<thead>
				<tr>
					<th class='center'>Name</th>
					<th class='center'>Email</th>
					<th class='center'>Amount Lent</th>
				</tr>
			</thead>
			<tbody>
				<% @lent_from.each do |lender| %>
				<tr>
					<td class='center'><%= lender[0].first_name %> <%= lender[0].last_name %></td>
					<td class='center'><%= lender[0].email %></td>
					<td class='center'><%= lender[1] %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>