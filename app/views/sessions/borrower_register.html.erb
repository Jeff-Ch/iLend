<div class = "row">
	<div class = "col s4 push-s4">
		<h5 class = 'center'>Register as a Borrower</h5>
<form action="/borrowers/create" method='post'>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<input placeholder= "First Name" class='validate' required pattern="[A-Za-z]{2,}" type='text' name='borrower[first_name]'>
			<input placeholder= "Last Name" class='validate' required pattern="[A-Za-z]{2,}" type='text' name='borrower[last_name]'>
			<input placeholder= "Email" class='validate' required type='email' name='borrower[email]'>
			<p>*Password must be a minimum of 6 characters</p>
			<input placeholder= "Password" class='validate' required minlength='6' type='password' name='borrower[password]'>
			<input class='validate' placeholder= "Password Confirmation" type='password' name='borrower[password_confirmation]' required minlength='6'>
			<input class='validate' required minlength='3' placeholder= 'Need Money For' type='text' name='borrower[purpose]'>
			<label for="textarea1">Description</label>
			<textarea id="textarea1" class="materialize-textarea validate" required minlength='10' name='borrower[description]'></textarea>
			<input class='validate' required placeholder='Amount Needed' type = 'number' step = '0.01' name ='borrower[money]'>
			<input type='hidden' name='borrower[money_raised]' value = "0">
			<button class="btn waves-effect waves-light" type="submit" name="action">Register
			</button>
		</form>
		</div>
</div>
<div class='center'>
	<a href="/" class="btn waves-effect blue accent-2 waves-light">Back</a>
</div>