<div class = "row">
	<div class = "col s4 push-s4">
		<h5 class = 'center'>Register as a Borrower</h5>
<form action="/borrower/create" method='post'>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<input placeholder= "First Name" type='text' name='borrower[first_name]'>
			<input placeholder= "Last Name" type='text' name='borrower[last_name]'>
			<input placeholder= "Email" type='text' name='borrower[email]'>
			<input placeholder= "Password" type='password' name='borrower[password]'>
			<p>Password must be a minimum of 6 characters</p>
			<input placeholder= 'Need Money For' type='text' name='borrower[purpose]'>
			<label for="textarea1">Description</label>
			<textarea id="textarea1" class="materialize-textarea" name='borrower[description]'></textarea>
			<input placeholder='Amount Needed' type = 'number' name ='borrower[money]'>
			<input type='hidden' name='borrower[money_raised]' value = "0">
			<button class="btn waves-effect waves-light" type="submit" name="action">Register
			</button>
		</form>
		</div>
</div>
<div class='center'>
	<a href="/" class="btn waves-effect blue accent-2 waves-light">Back</a>
</div>